<?xml version="1.0" encoding="UTF-8"?>
<keymap>
  <global>
    <joystick name="Virtual gamepad">
      <button id="1">Select</button>
      <button id="3">Back</button>
      <axis id="0" limit="+1">Right</axis>
      <axis id="0" limit="-1">Left</axis>
      <axis id="1" limit="-1">Up</axis>
      <axis id="1" limit="+1">Down</axis>
    </joystick>

    <joystick name="PLAYSTATION(R)3 Controller">
      <button id="14">Select</button>
      <button id="13">Back</button>
      <axis id="0" limit="+1">Right</axis>
      <axis id="0" limit="-1">Left</axis>
      <axis id="1" limit="-1">Up</axis>
      <axis id="1" limit="+1">Down</axis>
      <button id="5">Right</button>
      <button id="7">Left</button>
      <button id="4">Up</button>
      <button id="6">Down</button>
    </joystick>

  </global>
</keymap>



